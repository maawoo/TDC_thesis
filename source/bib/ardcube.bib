@Article{Hollmann2013,
  author     = {R. Hollmann and C. J. Merchant and R. Saunders and C. Downy and M. Buchwitz and A. Cazenave and E. Chuvieco and P. Defourny and G. de Leeuw and R. Forsberg and T. Holzer-Popp and F. Paul and S. Sandven and S. Sathyendranath and M. van Roozendael and W. Wagner},
