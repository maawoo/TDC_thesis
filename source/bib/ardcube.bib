@Article{Giuliani2020b,
  author      = {Gregory Giuliani and Bruno Chatenoux and Antonio Benvenuti and Pierre Marcel Anselme Lacroix and Mattia Santoro and Paolo Mazzetti},
  title       = {Monitoring land degradation at national level using satellite Earth Observation time-series data to support SDG15 – exploring the potential of data cube},
